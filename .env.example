# amadeus 環境変数設定例
# このファイルをコピーして .env として使用してください

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Whisper設定
WHISPER_MODEL=whisper-1

# VOICEVOX設定
VOICEVOX_API_URL=http://voicevox:50021
VOICEVOX_SPEAKER_ID=3

# Porcupine設定
PORCUPINE_ACCESS_KEY=your_porcupine_access_key_here
PORCUPINE_KEYWORD=computer

# アプリケーション設定
APP_NAME=amadeus
APP_VERSION=0.1.0
DEBUG=false

# サーバー設定
HOST=0.0.0.0
PORT=8000

# データベース設定
DATABASE_URL=postgresql://amadeus:amadeus_password@db:5432/amadeus

# API設定
API_V1_PREFIX=/api/v1

# 音声設定
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=logs/amadeus.log

# CORS設定
CORS_ORIGINS=["*"]